<h2 class="text-center">Login</h2>

<%= image_tag 'wc3-alliance.jpg', class: 'banner-img' %>

<div class="login-fields">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email,
                      autofocus: true,
                      placeholder: 'Email',
                      class: 'input-field mb5 w100' %>
    <%= f.password_field :password,
                         placeholder: 'Password',
                         class: 'input-field w100 mb20' %>
    <%= f.submit 'Log in', class: 'btn btn-dark no-border-radius w100' %>
  <% end %>

  <hr />

  <%= render 'devise/shared/links' %>
</div>


