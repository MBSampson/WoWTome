<h1>Characters</h1>

<div class="row">
  <% @characters.each do |character| %>
    <div class="col-sm-3 <%= character.character_class.main_color %>">
      <%= image_tag character.character_class.icon, class: 'class-icon' %>
      <%= character.name.capitalize %>
      <p>Class: <%= character.show_class %></p>
      <p>Spec: <%= character.show_spec %></p>
      <br />
      <%= link_to 'Show', character %>
      <%= link_to 'Edit', edit_character_path(character) %>
      <%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Character', new_character_path, id: 'new-character-btn' %>
